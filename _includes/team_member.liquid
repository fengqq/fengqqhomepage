{% comment %}
  Team member include with profile picture support
  Usage: {% include team_member.liquid name="Name" title="Title" image="image.jpg" research="Research focus" email="email@example.com" %}
{% endcomment %}

<div class="team-member mb-4">
  <div class="row align-items-start">
    {% if include.image %}
      <div class="col-md-3 col-sm-4 col-12 mb-3">
        <div class="text-center">
          <img src="{{ include.image | prepend: 'assets/img/' | relative_url }}" 
               alt="{{ include.name }}" 
               class="img-fluid rounded-circle" 
               style="max-width: 150px; width: 100%; height: auto; object-fit: cover;">
        </div>
      </div>
      <div class="col-md-9 col-sm-8 col-12">
    {% else %}
      <div class="col-12">
    {% endif %}
        <h4 class="mb-2">{{ include.name }}</h4>
        <p class="text-muted mb-2"><em>{{ include.title }}</em></p>
        {% if include.research %}
          <p class="mb-1"><strong>Research:</strong> {{ include.research }}</p>
        {% endif %}
        {% if include.email %}
          <p class="mb-1"><strong>Email:</strong> <a href="mailto:{{ include.email }}">{{ include.email }}</a></p>
        {% endif %}
        {% if include.website %}
          <p class="mb-1"><strong>Website:</strong> <a href="{{ include.website }}" target="_blank">{{ include.website }}</a></p>
        {% endif %}
        {% if include.current_position %}
          <p class="mb-1"><strong>Current Position:</strong> {{ include.current_position }}</p>
        {% endif %}
        {% if include.thesis %}
          <p class="mb-1"><strong>Thesis:</strong> {{ include.thesis }}</p>
        {% endif %}
      </div>
  </div>
</div>

<hr> 